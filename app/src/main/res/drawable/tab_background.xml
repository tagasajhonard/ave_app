<!-- res/drawable/custom_tab_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected (pressed) state -->
    <item android:state_selected="true">
        <layer-list>
            <!-- Background color (filled rectangle) -->
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="10dp" />
                    <solid android:color="#8B4513" /> <!-- Brown color -->
                </shape>
            </item>
            <!-- Border outline (rectangle with smaller size) -->
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="10dp" />
                    <solid android:color="@android:color/transparent" /> <!-- Transparent color for background -->
                    <stroke
                        android:width="1dp"
                        android:color="#8B4513" /> <!-- Brown color for border -->
                </shape>
            </item>
        </layer-list>
    </item>
    <!-- Default (unselected) state -->
    <item>
        <layer-list>
            <!-- Background color (filled rectangle) -->
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="10dp" />
                    <solid android:color="@android:color/transparent" /> <!-- Black color for default state -->
                </shape>
            </item>
            <!-- Border outline (rectangle with smaller size) -->
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="10dp" />
                    <solid android:color="@android:color/transparent" /> <!-- Transparent color for background -->
                    <stroke
                        android:width="1dp"
                        android:color="#8B4513" /> <!-- Brown color for border -->
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
