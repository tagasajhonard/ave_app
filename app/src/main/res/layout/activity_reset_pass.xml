<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_margin="24dp"
    tools:context=".ResetPass">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="70dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/herobold"
                android:text="Step"
                android:textAlignment="center"/>

            <androidx.cardview.widget.CardView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                app:cardCornerRadius="50dp">
                <TextView
                    android:background="@color/topbrown"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:text="1"
                    android:fontFamily="@font/heroregular"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>



        <View
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:layout_marginTop="35dp"
            android:background="@color/topbrown"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/herobold"
                android:text="Step"
                android:textAlignment="center"/>

            <androidx.cardview.widget.CardView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                app:cardCornerRadius="50dp">
                <TextView
                    android:background="@color/topbrown"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:text="2"
                    android:fontFamily="@font/heroregular"/>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:layout_marginTop="35dp"
            android:background="@color/topbrown"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/herobold"
                android:text="Step"
                android:textAlignment="center"/>

            <androidx.cardview.widget.CardView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                app:cardCornerRadius="50dp">
                <TextView
                    android:background="@color/topbrown"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:text="3"
                    android:fontFamily="@font/heroregular"/>
            </androidx.cardview.widget.CardView>


        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/textSentMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Set your new password"
        android:textColor="@color/charcoal"
        android:fontFamily="@font/herobold"
        android:textSize="20sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/heroregular"
        android:paddingBottom="16dp"
        android:textSize="15sp"
        android:text="Enter and confirm your new password to complete the reset."
        />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxBackgroundMode="outline"
        style="@style/TextInputLayoutStyle"
        android:hint="New Password"
        app:endIconMode="password_toggle">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/newPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/heroregular"
            android:inputType="textPassword"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxBackgroundMode="outline"
        style="@style/TextInputLayoutStyle"
        android:hint="Confirm Password"
        app:endIconMode="password_toggle">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/confirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/heroregular"
            android:inputType="textPassword"/>
    </com.google.android.material.textfield.TextInputLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:fontFamily="@font/herobold"
        android:id="@+id/btnResetPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reset Password" />

</LinearLayout>
