<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailProductActivity">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/detailProductImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop" />

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:padding="15dp"
        android:background="@drawable/detailed_prod_container">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Avenue Tea House"
                        android:textSize="24sp"
                        android:fontFamily="@font/herobold"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/detailProductName"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textColor="#8B4513"
                        android:textSize="20sp"
                        android:fontFamily="@font/herobold"
                        android:textStyle="bold" />
                </LinearLayout>
                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="1dp"/>
                <ImageView
                    android:id="@+id/showQR"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/qr"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/herobold"
                        android:textSize="17sp"
                        android:text="Size"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/cupLarge"
                            android:layout_width="50dp"
                            android:layout_height="65dp"
                            android:background="@drawable/cupl_gray"/>

                        <ImageView
                            android:id="@+id/cupSmall"
                            android:layout_width="40dp"
                            android:layout_height="55dp"
                            android:layout_gravity="bottom"
                            android:layout_marginStart="5dp"
                            android:background="@drawable/cups_gray"/>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/showPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/herobold"
                            android:textColor="@color/brown"
                            android:textSize="20dp"/>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btnborder"
                        android:layout_marginTop="15dp"
                        android:layout_gravity="end"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/decrementButton"
                            android:layout_width="20dp"
                            android:fontFamily="@font/herobold"
                            android:background="@drawable/minus"
                            android:layout_marginStart="5dp"
                            android:layout_gravity="center_vertical"
                            android:layout_height="20dp"  />

                        <TextView
                            android:id="@+id/numberTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:text="1"
                            android:textSize="25sp" />
                        <TextView
                            android:id="@+id/incrementButton"
                            android:layout_width="20dp"
                            android:fontFamily="@font/herobold"
                            android:background="@drawable/plus"
                            android:layout_marginEnd="5dp"
                            android:layout_gravity="center_vertical"
                            android:layout_height="20dp" />


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/star_outline"/>
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/star_outline"/>
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/star_outline"/>
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/star_outline"/>
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/star_outline"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/sugarlvl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/herobold"
                    android:textSize="17sp"
                    android:layout_marginBottom="10dp"
                    android:text="Sugar Level"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/sugar"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_height="wrap_content">

                        <SeekBar
                            android:id="@+id/sugarSeekBar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:progressTint="@color/brown"
                            android:thumbTint="@color/brown"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:fontFamily="@font/herobold"
                                android:id="@+id/marker_0"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:textSize="15dp"
                                android:layout_gravity="center_vertical"
                                android:padding="5dp"
                                />

                            <TextView
                                android:fontFamily="@font/herobold"
                                android:id="@+id/marker_25"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:textSize="15dp"
                                android:padding="5dp"
                                android:text="25%" />



                            <TextView
                                android:fontFamily="@font/herobold"
                                android:id="@+id/marker_50"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:textSize="15dp"
                                android:padding="5dp"
                                android:text="50%" />


                            <TextView
                                android:fontFamily="@font/herobold"
                                android:id="@+id/marker_75"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:textSize="15dp"
                                android:padding="5dp"
                                android:text="75%" />



                            <TextView
                                android:fontFamily="@font/herobold"
                                android:id="@+id/marker_100"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:textSize="15dp"
                                android:text="100%" />
                        </LinearLayout>
                </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        <LinearLayout
            android:id="@+id/addOnsField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/herobold"
                android:textSize="17sp"
                android:layout_marginBottom="10dp"
                android:text="Add-Ons"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/addonsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />



        </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/herobold"
                    android:text="Description"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/txtDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/herobold"
                    android:textColor="@color/brown"
                    android:textSize="13dp" />
            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/addToCart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/add_to_cart"
                android:fontFamily="@font/herobold"
                android:padding="10dp"
                android:text="ADD TO CART"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20dp"
                tools:ignore="RtlCompat" />
        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/qrFrameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:padding="30dp"
        android:visibility="gone"> <!-- Initially hidden -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Avenue Tea House"
                android:fontFamily="@font/herobold"
                android:textSize="25dp"
                android:textAlignment="center"/>

            <View
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/qrImage"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Scan to view your favorite Milktea"
                android:textAlignment="center"
                android:fontFamily="@font/heroregular"
                android:textSize="18dp"
                tools:ignore="HardcodedText" />

        </LinearLayout>


    </FrameLayout>
</RelativeLayout>