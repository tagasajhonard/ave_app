<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:id="@+id/contact_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/semi_gray"
    tools:context=".ContactUsActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        cardview:cardCornerRadius="16dp"
        cardview:cardElevation="6dp"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:background="@drawable/logo" />

            <TextView
                android:fontFamily="@font/herobold"
                android:id="@+id/storeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Avenue Tea House Bongabong"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="16dp"
                android:textAlignment="center"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="For inquiries, feel free to call, email, or visit our Facebook page:"
                android:textSize="16sp"
                android:fontFamily="@font/heroregular"
                android:textColor="#000000"
                android:layout_marginBottom="24dp"
                android:textAlignment="center" />

            <TextView
                android:fontFamily="@font/herobold"
                android:id="@+id/phoneText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“ž 0993-738-0697"
                android:textSize="18sp"
                android:textColor="#1E88E5"
                android:layout_marginBottom="16dp" />

            <TextView
                android:fontFamily="@font/herobold"
                android:id="@+id/emailText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“§ serranojhonard21@gmail.com"
                android:textSize="18sp"
                android:layout_marginBottom="16dp"
                android:textColor="#1E88E5" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:onClick="openFacebook"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/facebook"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:onClick="openFacebook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/herobold"
                    android:text="Visit our Facebook page"
                    android:textSize="18sp"
                    android:textColor="#1877F2" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
