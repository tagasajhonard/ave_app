<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="@drawable/logo"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rate Your Experience"
            android:fontFamily="@font/herobold"
            android:textSize="20dp"/>
    </LinearLayout>



    <!-- Product Taste Rating -->
    <TextView
        android:textColor="@color/topbrown"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product Taste"
        android:layout_marginTop="40dp"
        android:textSize="16sp" />

    <RatingBar
        android:tint="@color/topbrown"
        android:progressTint="@color/topbrown"
        android:layout_gravity="center"
        android:id="@+id/rating_taste"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="1.0"
        android:scaleX="0.7"
        android:scaleY="0.7"/>

    <!-- Delivery Time Rating -->
    <TextView
        android:textColor="@color/topbrown"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delivery Time"
        android:textSize="16sp" />

    <RatingBar
        android:tint="@color/topbrown"
        android:progressTint="@color/topbrown"
        android:layout_gravity="center"
        android:id="@+id/rating_delivery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="1.0"
        android:scaleX="0.7"
        android:scaleY="0.7"/>

    <!-- Product Quality Rating -->
    <TextView
        android:textColor="@color/topbrown"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product Quality"
        android:textSize="16sp" />

    <RatingBar
        android:tint="@color/topbrown"
        android:progressTint="@color/topbrown"
        android:layout_gravity="center"
        android:id="@+id/rating_quality"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="1.0"
        android:scaleX="0.7"
        android:scaleY="0.7"/>

    <!-- Customer Service Rating -->
    <TextView
        android:textColor="@color/topbrown"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Customer Service"
        android:textSize="16sp" />

    <RatingBar
        android:tint="@color/topbrown"
        android:progressTint="@color/topbrown"
        android:layout_gravity="center"
        android:id="@+id/rating_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="1.0"
        android:scaleX="0.7"
        android:scaleY="0.7"/>

    <EditText
        android:id="@+id/feedback_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start|top"
        android:hint="Write your feedback here"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:inputType="textMultiLine"
        android:maxLines="6"
        android:minLines="3"
        android:scrollbars="vertical"
        android:layout_marginTop="10dp"/>

    </LinearLayout>

    </ScrollView>

</LinearLayout>
