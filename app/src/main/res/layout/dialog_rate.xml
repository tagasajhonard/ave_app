<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:background="@drawable/feedback"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rate Your Experience"
            android:fontFamily="@font/herobold"
            android:layout_marginBottom="20dp"
            android:textSize="20dp"/>
    </LinearLayout>



    <!-- Product Taste Rating -->

            <TextView
                android:textColor="@color/topbrown"
                android:layout_gravity="center"
                android:fontFamily="@font/herobold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Taste"
                android:textSize="16sp" />

            <RatingBar
                android:tint="@color/topbrown"
                android:progressTint="@color/topbrown"
                android:id="@+id/rating_taste"
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="1.0"
                android:scaleX="0.7"
                android:scaleY="0.7" />


    <!-- Delivery Time Rating -->

            <TextView
                android:textColor="@color/topbrown"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/herobold"
                android:text="Time"
                android:textSize="16sp" />


            <RatingBar
                android:tint="@color/topbrown"
                android:progressTint="@color/topbrown"
                android:id="@+id/rating_delivery"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="1.0"
                android:scaleX="0.7"
                android:scaleY="0.7"/>
        </LinearLayout>



    <!-- Product Quality Rating -->

            <TextView
                android:textColor="@color/topbrown"
                android:layout_gravity="center"
                android:fontFamily="@font/herobold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quality"
                android:textSize="16sp" />

            <RatingBar
                android:tint="@color/topbrown"
                android:progressTint="@color/topbrown"
                android:id="@+id/rating_quality"
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="1.0"
                android:scaleX="0.7"
                android:scaleY="0.7"/>


    <!-- Customer Service Rating -->


            <TextView
                android:textColor="@color/topbrown"
                android:layout_gravity="center"
                android:fontFamily="@font/herobold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Service"
                android:textSize="16sp" />

            <RatingBar
                android:tint="@color/topbrown"
                android:progressTint="@color/topbrown"
                android:layout_gravity="center"
                android:id="@+id/rating_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="1.0"
                android:scaleX="0.7"
                android:scaleY="0.7"/>






        <EditText
            android:id="@+id/feedback_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:hint="Write your feedback here"
            android:fontFamily="@font/herobold"
            android:inputType="textMultiLine"
            android:scrollbars="vertical"
            android:maxLines="10"
            android:minLines="5"
            android:overScrollMode="always"
            />



    </LinearLayout>



