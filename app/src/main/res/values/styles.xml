<resources>

    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@android:color/transparent</item> <!-- Transparent indicator -->
        <item name="tabIndicatorFullWidth">false</item> <!-- Indicator width based on tab content -->
        <item name="tabPaddingStart">16dp</item> <!-- Left padding for tabs -->
        <item name="tabPaddingEnd">16dp</item>
    </style>

    <style name="CustomTabText" parent="Widget.Design.TabLayout">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/heroregular</item>
    </style>

    <style name="RadioButtonStyle" parent="">
        <item name="colorAccent">@color/brown</item>

        <item name="android:textColorPrimary">@android:color/darker_gray</item>
    </style>

    <style name="CustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="fontFamily">@font/herobold</item>
        <item name="android:textSize">10dp</item> <!-- Optional: You can also define text size -->
    </style>


</resources>
